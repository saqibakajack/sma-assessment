{
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false
  }
}
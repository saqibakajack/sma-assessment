{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.js",
    "babel.config.js"
  ]
}